%section.hero
  = image_tag("amistad-hero")
= render '/refinery/content_page', {hide_sections: [:body_content_title]}

%section#side_panel
  - @items = Refinery::News::Item.latest(5)

  - if @items.any?
    - @items.each do |item|
      %article.news_item_truncated
        %h2= link_to item.title, refinery.news_item_path(item)
        %p
          %small
            = l(item.publish_date, :format => :long)
        = truncate  item.body, :length => 200,
          :omission => " ... #{link_to "Read_more", refinery.news_item_path(item)}",
                        :preserve_html_tags => true

  - else
    %p
      %em= t('.no_items_yet')
